<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <!-- Choisir l'activité principale
        <activity android:name=".activity.MainActivityAccueil" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        -->

        <activity
            android:name=".activityV2.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ActivityTutoEtLog" android:exported="true"/>
        <activity android:name=".activity.ActivityJeu" android:exported="true" android:screenOrientation="landscape"/>
        <activity android:name=".activity.ActivityGameOver" android:exported="true"/>
        <activity android:name=".activity.ActivityHighscores" android:exported="true"/>


        <!-- Activités que j'ai rajouté -->

        <activity
            android:name=".activityV2.Highscore"
            android:label="@string/app_name"
            android:exported="true"
            android:parentActivityName=".activityV2.MainActivity">
        </activity>

        <activity
            android:name=".activityV2.Rules"
            android:label="@string/app_name"
            android:exported="true"
            android:parentActivityName=".activityV2.MainActivity">
        </activity>

        <activity
            android:name=".activityV2.gameView"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:exported="true"
            android:parentActivityName=".activityV2.MainActivity">
        </activity>
    </application>

</manifest>